# Environment variables for testnet deployment
# Copy this to .env and fill in your values

# Ethereum Configuration
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_CHAIN_ID=11155111  # Sepolia testnet
PRIVATE_KEY=your_testnet_private_key_here

# Contract Addresses (after deployment)
NFT_CONTRACT_ADDRESS=
TOKEN_CONTRACT_ADDRESS=
GOVERNANCE_CONTRACT_ADDRESS=
REWARD_DISTRIBUTOR_ADDRESS=

# DCMX Network Configuration
DCMX_LOG_LEVEL=INFO
DCMX_STORAGE_PATH=/var/lib/dcmx
DCMX_MAX_PEERS=50
DCMX_PEER_TIMEOUT=300  # seconds

# Compliance Configuration
COMPLIANCE_ENABLED=true
COMPLIANCE_KYC_ENABLED=true
COMPLIANCE_OFAC_ENABLED=true
COMPLIANCE_OFAC_UPDATE_FREQ=7d
COMPLIANCE_LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://compliance:password@compliance-db:5432/dcmx_compliance
REDIS_URL=redis://compliance-cache:6379

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Optional: Discord Webhook for Alerts
DISCORD_WEBHOOK_URL=
ALERT_CHANNEL=dcmx-testnet

# Optional: Sentry for Error Tracking
SENTRY_DSN=

# Feature Flags
FEATURE_AUDIO_WATERMARKING=true
FEATURE_ZK_PROOFS=true
FEATURE_LORA_MESH=false  # Not yet implemented
FEATURE_AUTO_DISCOVERY=true

# Performance Tuning
MAX_CONTENT_SIZE=1000000000  # 1GB
CONNECTION_POOL_SIZE=100
BATCH_SIZE=1000
SYNC_INTERVAL=30  # seconds
