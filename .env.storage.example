# Decentralized Storage Configuration
# Copy to .env and fill in your API keys

# ============================================================================
# Storj DCS (Primary Audio Storage)
# ============================================================================
# Sign up at: https://www.storj.io/signup
# Free tier: 150GB storage + 150GB bandwidth/month

STORJ_ACCESS_KEY=your_storj_access_key_here
STORJ_SECRET_KEY=your_storj_secret_key_here
STORJ_BUCKET=dcmx-music

# ============================================================================
# Web3.Storage (IPFS Backup)
# ============================================================================
# Sign up at: https://web3.storage
# Free tier: 10GB storage + 10GB bandwidth/month

WEB3_STORAGE_TOKEN=your_web3_storage_token_here

# ============================================================================
# NFT.Storage (NFT Metadata)
# ============================================================================
# Sign up at: https://nft.storage
# Free forever: 100GB/month uploads

NFT_STORAGE_TOKEN=your_nft_storage_token_here

# ============================================================================
# Upload Configuration
# ============================================================================
# Maximum concurrent uploads
MAX_CONCURRENT_UPLOADS=5

# Include IPFS backup for audio files (true/false)
INCLUDE_IPFS_BACKUP=true
