# DCMX Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# TRON Network Configuration
NEXT_PUBLIC_TRON_NETWORK=shasta  # shasta (testnet) or mainnet
NEXT_PUBLIC_TRON_RPC=https://api.shasta.trongrid.io

# Smart Contract Addresses (TRON)
NEXT_PUBLIC_NFT_CONTRACT=
NEXT_PUBLIC_TOKEN_CONTRACT=
NEXT_PUBLIC_GOVERNANCE_CONTRACT=
NEXT_PUBLIC_REWARD_DISTRIBUTOR=
NEXT_PUBLIC_ROYALTY_CONTRACT=

# JWT Configuration (for backend communication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Feature Flags
NEXT_PUBLIC_ENABLE_KYC=true
NEXT_PUBLIC_ENABLE_REWARDS=true
NEXT_PUBLIC_ENABLE_VOTING=true

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Development
NODE_ENV=development
