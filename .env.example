# TRON Blockchain Configuration
TRON_NETWORK=shasta  # Options: mainnet, shasta, nile
TRON_PRIVATE_KEY=your_64_character_hex_private_key_here
TRONGRID_API_KEY=optional_api_key_for_rate_limits

# TRON RPC Endpoint (optional, defaults to network standard)
# TRON_RPC_ENDPOINT=https://api.shasta.trongrid.io

# Smart Contract Addresses (set after deployment)
DCMX_TOKEN_ADDRESS=
MUSIC_NFT_ADDRESS=
COMPLIANCE_REGISTRY_ADDRESS=
REWARD_VAULT_ADDRESS=
ROYALTY_DISTRIBUTOR_ADDRESS=

# PostgreSQL Database
DATABASE_URL=postgresql://dcmx_user:your_password@localhost:5432/dcmx_main

# Application Settings
DCMX_ADMIN_TOKEN=your_secure_admin_token_here
DCMX_COMPLIANCE_PATH=/var/lib/dcmx/compliance

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Event Indexer Configuration
INDEXER_START_BLOCK=0  # Block number to start indexing from
INDEXER_BATCH_SIZE=100  # Number of blocks to process per batch
INDEXER_POLL_INTERVAL=5  # Seconds between polling for new blocks

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Redis (for caching and queue)
REDIS_URL=redis://localhost:6379/0

# Development/Testing
DEVELOPMENT_MODE=false
SKIP_BLOCKCHAIN_VERIFICATION=false  # Only for testing

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# KYC/AML Settings
KYC_REQUIRED_FOR_AMOUNT=10000  # USD value threshold
OFAC_CHECK_ENABLED=true
AML_MONITORING_ENABLED=true
